<!DOCTYPE html>
<html lang="en">
<% include header %>

<body>
<% include navbar %>

<div role="main" class="container" style="width: 30%;">
  <br /><br />

  <% if (fruits.length) { %>
    <h2 class="text-center">Fruit Listing</h2>
    
    <a class="float-right" href="/new">New Fruit</a>

    <br />

    <table class="table table-bordered">
      <thead class="bg-secondary">
      <tr>
        <th class="text-white">Name</th>
        <th class="text-white">Functions</th>
      </tr>
      </thead>
      <tbody>
      <% fruits.forEach(function (entry) { %>
        <tr>
          <td><%= entry.name %></td>
          <td style="width: 10%; text-align: center;">
            <div class="btn-group">
              <a style="color: #555" class="btn" href="/view/<%= entry.name %>">
                <i class="fa fa-pencil fa-fw" aria-hidden="true"></i>
              </a>
              
              <a style="color: #555" class="btn" href="/fruits/delete/<%= entry._id %>" onclick="return confirm('Are you sure you want to delete this fruit?')">
                <i class="fa fa-trash fa-fw" aria-hidden="true"></i>
              </a>
            </div>
            
            </form>
          </td>
        </tr>
      </tbody>
      <% }) %>
    </table>
  <% } else { %> No entries! <a href="/new">Add one!</a>
  <% } %>

  <br />
</div>
<% include scripts %>
</body>
</html>